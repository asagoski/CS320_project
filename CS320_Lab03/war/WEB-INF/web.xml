<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>IndexServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.lab03.servlet.IndexServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AccountServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.lab03.servlet.AccountServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>NewAccountServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.lab03.servlet.NewAccountServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CancelReservationServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.lab03.servlet.CancelReservationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SearchRequestServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.lab03.servlet.SearchRequestServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ResultsServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.lab03.servlet.ResultsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ConfirmationServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.lab03.servlet.ConfirmationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddNumbersServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.lab03.servlet.AddNumbersServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GuessingGameServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.lab03.servlet.GuessingGameServlet</servlet-class>
	</servlet>

	<!-- AJAX servlets. -->
	<servlet>
		<servlet-name>AccountAjaxServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.lab03.servlet.ajax.AccountAjaxServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddNumbersAjaxServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.lab03.servlet.ajax.AddNumbersAjaxServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>NextGuessAjaxServlet</servlet-name>
		<servlet-class>edu.ycp.cs320.lab03.servlet.ajax.NextGuessAjaxServlet</servlet-class>
	</servlet>

	<!-- Servlet mappings -->
	<servlet-mapping>
		<servlet-name>IndexServlet</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AccountServlet</servlet-name>
		<url-pattern>/Account</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NewAccountServlet</servlet-name>
		<url-pattern>/newAccount</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CancelReservationServlet</servlet-name>
		<url-pattern>/cancelReservation</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SearchRequestServlet</servlet-name>
		<url-pattern>/checkRoomAvailability</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ResultsServlet</servlet-name>
		<url-pattern>/Results</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ConfirmationServlet</servlet-name>
		<url-pattern>/Confirmation</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddNumbersServlet</servlet-name>
		<url-pattern>/addNumbers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GuessingGameServlet</servlet-name>
		<url-pattern>/guessingGame</url-pattern>
	</servlet-mapping>

	<!-- AJAX servlet mappings. -->
	<servlet-mapping>
		<servlet-name>AccountAjaxServlet</servlet-name>
		<url-pattern>/ajax/Account</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddNumbersAjaxServlet</servlet-name>
		<url-pattern>/ajax/addNumbers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NextGuessAjaxServlet</servlet-name>
		<url-pattern>/ajax/nextGuess</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
